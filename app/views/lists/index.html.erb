<%= render 'shared/navbar' %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/7081161/pexels-photo-7081161.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500);">
  <div class="container">
    <h1><strong>Le Wagon Movie List Directory</strong></h1>
    <p>Classic</p>
  </div>
</div>


<div class="container h1 mt-4">
<h3>Estas son las listas:</h3>
</div>


<div class="container boton mt-2">
<%= link_to 'Add a new list', new_list_path, class: 'btn btn-primary'%>
</div>



<div class="grid-container mt-5">
<% @lists.each do |list| %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/3709370/pexels-photo-3709370.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
<%= link_to list.name, list_path(list[:id]) %>
</div>
<% end %>
</div>
